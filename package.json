{
  "name": "fusion-flow",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "start": "turbo run start",
    "test": "turbo run test",
    "test:unit": "turbo run test:unit",
    "test:integration": "turbo run test:integration",
    "test:e2e": "playwright test",
    "test:smoke": "playwright test --grep @smoke",
    "test:a11y": "turbo run test:a11y",
    "test:performance": "playwright test e2e/performance.spec.ts",
    "test:security": "playwright test e2e/security.spec.ts",
    "test:mobile": "playwright test e2e/mobile-responsiveness.spec.ts",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "quality:check": "node scripts/quality-check.js",
    "quality:report": "node scripts/quality-check.js --report-only",
    "deploy:staging": "node scripts/deploy.js staging",
    "deploy:production": "node scripts/deploy.js production",
    "security:audit": "npm audit --audit-level=moderate",
    "security:scan": "npx snyk test",
    "performance:analyze": "turbo run build && npx webpack-bundle-analyzer dist/static/js/*.js",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "db:migrate": "turbo run db:migrate",
    "db:seed": "turbo run db:seed",
    "db:backup": "turbo run db:backup",
    "precommit": "npm run lint && npm run test:unit",
    "prepush": "npm run quality:check"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "Fusion Flow - Plataforma de gest√£o de projetos unificada",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.0.0",
    "chalk": "^5.3.0",
    "eslint": "^8.50.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.0",
    "react-refresh": "^0.17.0",
    "turbo": "^1.10.0",
    "typescript": "^5.2.0",
    "webpack-bundle-analyzer": "^4.9.0"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
